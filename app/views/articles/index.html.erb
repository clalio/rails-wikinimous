<h1 class="text-center">Articles</h1>

<% @articles.each do |article| %>
  <h2 class="text-center"><%= link_to article.title, article_path(article) %></h2>
  <p class="text-center"><%= Kramdown::Document.new(article.content).to_html.html_safe %></p>
  <%= link_to "Remove article", article_path(article), method: :delete%>
<% end %>
